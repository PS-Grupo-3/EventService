using Domain.Entities;
using Microsoft.EntityFrameworkCore;
using Microsoft.EntityFrameworkCore.Metadata.Builders;

namespace Infrastructure.Persistence.Configurations
{
    public class EventSeatConfiguration : IEntityTypeConfiguration<EventSeat>
    {
        public void Configure(EntityTypeBuilder<EventSeat> builder)
        {
            builder.ToTable("EventSeat");
            
            builder.HasKey(es => es.EventSeatId);

            
            builder.Property(es => es.Price)
                   .HasColumnType("decimal(18,2)")
                   .IsRequired();

            
            builder.HasOne(es => es.Event)
                   .WithMany()
                   .HasForeignKey(es => es.EventId)
                   .OnDelete(DeleteBehavior.Restrict); 

            builder.HasOne(es => es.EventSector)
                   .WithMany() 
                   .HasForeignKey(es => es.EventSectorId)
                   .OnDelete(DeleteBehavior.Restrict);

           
            builder.HasIndex(es => new { es.EventSectorId, es.Available });
        }
    }
}